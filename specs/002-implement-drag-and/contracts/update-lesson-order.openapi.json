{
  "openapi": "3.0.0",
  "info": {
    "title": "Update Lesson Order API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/class-sessions/{sessionId}/lessons/reorder": {
      "put": {
        "summary": "Updates the order of lessons within a class session.",
        "parameters": [
          {
            "name": "sessionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "lessonIds": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully updated lesson order."
          },
          "400": {
            "description": "Invalid input."
          },
          "404": {
            "description": "Class session not found."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    }
  }
}
